# Production Environment Variables Template
# Copy this file to .env.production.local for production deployment
# DO NOT commit actual production values to version control

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application Settings (REQUIRED)
NEXT_PUBLIC_APP_NAME="Mzima Homes"
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Email Configuration (OPTIONAL - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# M-Pesa Integration (OPTIONAL - for future payment features)
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey

# SMS Integration (OPTIONAL - for notifications)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=your-sender-id

# Security Settings (OPTIONAL)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# Analytics (OPTIONAL)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
