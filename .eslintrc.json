{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "plugins": ["@typescript-eslint"],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "React": "readonly",
    "globalThis": "readonly"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "no-unused-vars": "off",
    "no-console": "off",
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "react/no-unescaped-entities": "off",
    "@next/next/no-html-link-for-pages": "off",
    "react-hooks/exhaustive-deps": "off",
    "no-redeclare": "warn"
  },
  "overrides": [
    {
      "files": ["src/__tests__/**/*.{js,ts,tsx}"],
      "env": {
        "jest": true
      },
      "globals": {
        "jest": "readonly",
        "describe": "readonly",
        "test": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly"
      }
    }
  ]
}

